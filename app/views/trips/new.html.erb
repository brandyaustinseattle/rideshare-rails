<h2>Trip Details</h2>

<div class="intro">
  <div>
    <strong>Trip Id:</strong> <%= @trip.id %>
  </div>
</div>

<table class="trip_show">
  <tr>
    <th>Date</th>
    <th>Driver</th>
    <th>Passenger</th>
    <th>Cost</th>
    <th>Rating</th>
  </tr>

  <tr>
    <td><%= @trip.date %></td>

    <td><%= @trip.driver.name %></td>
    <td><%= @trip.passenger.name %></td>

    <td><%= @trip.cost %></td>

    <%= render partial: "form", locals: { page_title: "Add a new trip"} %>

    <td><%= link_to "Delete", trip_path(@trip), method: :delete, data: {confirm: "Do you really want to delete trip #{@trip.id}?"} %></td>
  </tr>
  

</table>
