<h2>Passenger</h2>

<table>
  <% @passengers.each do |passenger| %>
    <tr>
      <td><%= link_to passenger.name, passenger_path(passenger) %></td>
      <td><%= link_to "Edit", edit_passenger_path(passenger) %></td>
      <td><%= link_to("Delete", passenger_path(passenger), method: :delete, data: { confirm: "Do you really want to delete #{passenger.name}?"}) %></td>
    </tr>
  <% end %>
</table>
